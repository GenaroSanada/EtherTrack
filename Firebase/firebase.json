{
  "rules" : "firebase_rules.json",
  "hosting": {
    "public": "www",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],

    "rewrites": [
	  {
		"source": "/createUser",
		"function": "createUser"
      },
	{
		"source": "/dapp",
		"destination": "/index.html"
     }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
